---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import "../styles/core.scss";
const { title } = Astro.props;
---

<head>
  <!-- Encoding & Viewport -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Title & Description -->
  <title>{ title }</title>
