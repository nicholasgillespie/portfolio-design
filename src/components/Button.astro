---
const { href, label, variant = "primary" } = Astro.props;
---

<!-- Based on the presence of href, render an anchor or button element -->
{href ? (
  <a class="button" href={href} data-button-variant={variant}>
    <span>{label}</span>
  </a>
) : (
  <button class="button" data-button-variant={variant}>
    <span>{label}</span>
  </button>
)}
